{
	"name": "my-blog-hono",
	"type": "module",
	"scripts": {
		"dev": "bun run dev-server.ts",
		"dev:wrangler": "wrangler dev --local --persist-to .wrangler/state --port 8787",
		"dev:remote": "wrangler dev",
		"migrate": "bun run migrate-postgres-to-sqlite.ts",
		"migrate:check": "echo 'Checking migration requirements...'",
		"deploy": "wrangler deploy --minify",
		"cf-typegen": "wrangler types --env-interface CloudflareBindings",
		"build": "bun build src/index.ts --outdir ./dist",
		"test": "bun test"
	},
	"dependencies": {
		"@hono/swagger-ui": "^0.5.2",
		"hono": "^4.10.2",
		"hono-swagger-ui": "^1.0.5",
		"postgres": "^3.4.7",
		"zod": "^4.1.12"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20251014.0",
		"@types/bun": "^1.3.0",
		"typescript": "^5.9.3",
		"wrangler": "^4.44.0"
	}
}
